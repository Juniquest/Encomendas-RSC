import React, { useState } from "react";
import { BarChart, Bar, XAxis, YAxis, Tooltip, ResponsiveContainer } from "recharts";
import "./App.css";

function App() {
  const [selectedDate, setSelectedDate] = useState("");
  const [signatureData, setSignatureData] = useState("");

  const reportData = [
    { name: "Jan", orders: 30 },
    { name: "Feb", orders: 45 },
    { name: "Mar", orders: 50 },
    { name: "Apr", orders: 60 },
    { name: "May", orders: 75 },
  ];

  const handleSignature = (e) => {
    setSignatureData(e.target.value);
  };

  return (
    <div className="App">
      <div className="tabs">
        <input type="radio" id="tab1" name="tab" defaultChecked />
        <label htmlFor="tab1">Dashboard</label>
        <input type="radio" id="tab2" name="tab" />
        <label htmlFor="tab2">Nova Encomenda</label>
        <input type="radio" id="tab3" name="tab" />
        <label htmlFor="tab3">Relatórios</label>

        <div className="tab-content" id="content1">
          <h2>Bem-vindo ao App de Encomendas</h2>
          <p>Gerencie suas entregas e recebimentos facilmente.</p>
        </div>

        <div className="tab-content" id="content2">
          <h3>Nova Encomenda</h3>
          <form className="order-form">
            <input type="text" placeholder="Nome do Contato" />
            <input type="tel" placeholder="Telefone" />
            <input type="text" placeholder="CPF" />
            <label>Data de Recebimento:</label>
            <input type="date" onChange={(e) => setSelectedDate(e.target.value)} />
            <label>Data e Hora de Entrega:</label>
            <input type="datetime-local" />
            <textarea placeholder="Observações do Produto"></textarea>
            <label>Foto do Produto:</label>
            <input type="file" accept="image/*" capture />
            <label>Assinatura:</label>
            <textarea placeholder="Assinatura Digital" value={signatureData} onChange={handleSignature}></textarea>
            <button type="submit">Salvar Encomenda</button>
          </form>
        </div>

        <div className="tab-content" id="content3">
          <h3>Relatórios de Encomendas</h3>
          <ResponsiveContainer width="100%" height={300}>
            <BarChart data={reportData}>
              <XAxis dataKey="name" />
              <YAxis />
              <Tooltip />
              <Bar dataKey="orders" fill="#4F46E5" />
            </BarChart>
          </ResponsiveContainer>
        </div>
      </div>
    </div>
  );
}

export default App;
